<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:background="@mipmap/ic_bang_gaowan_bg">

        <LinearLayout
            android:id="@+id/bangContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/bangSecondCoverContainer"
                    android:layout_width="@dimen/dp_66"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginBottom="@dimen/dp_55"
                    android:layout_weight="1"
                    android:background="@mipmap/ic_bang_gaowan_2"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bangSecondCoverView"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:background="@drawable/circle" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="MR.刘先生"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:singleLine="true"
                    android:text="委托137次"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/button_gw_focus"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/bangFirstCoverContainer"
                    android:layout_width="@dimen/dp_86"
                    android:layout_height="@dimen/dp_116"
                    android:layout_marginBottom="@dimen/dp_62"
                    android:layout_weight="1"
                    android:background="@mipmap/ic_bang_gaowan_1"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bangFirstCoverView"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:background="@drawable/circle" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="MR.刘先生"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:singleLine="true"
                    android:text="委托137次"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_25"
                    android:background="@drawable/button_gw_focus"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/bangThirdCoverContainer"
                    android:layout_width="@dimen/dp_66"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginBottom="@dimen/dp_42"
                    android:layout_weight="1"
                    android:background="@mipmap/ic_bang_gaowan_3"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bangThirdCoverView"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:background="@drawable/circle" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="MR.刘先生"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:singleLine="true"
                    android:text="委托137次"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/button_gw_focus"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/verticalRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16" />

    </LinearLayout>
</layout>