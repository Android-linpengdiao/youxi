<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.zyp.cardview.YcCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:ycCardCornerRadius="@dimen/dp_8"
        app:ycCardElevation="@dimen/dp_2"
        app:ycCardMaxElevation="@dimen/dp_2"
        app:ycCardPreventCornerOverlap="false"
        app:ycStartShadowColor="@color/shadowsColor">

        <LinearLayout
            android:id="@+id/view_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_64"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <ImageView
                android:id="@+id/iconView"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/circle_gray" />

            <TextView
                android:id="@+id/titleView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text=""
                android:textColor="#333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/focusView"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_28"
                android:background="@drawable/button_yellow"
                android:gravity="center"
                android:text="关注"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>

    </com.zyp.cardview.YcCardView>

</layout>