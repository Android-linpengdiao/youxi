<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/viewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_525"
            android:background="@mipmap/ic_choujiang_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/dp_329"
                android:layout_height="@dimen/dp_329"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_50">

                <ImageView
                    android:layout_width="@dimen/dp_329"
                    android:layout_height="@dimen/dp_329"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_choujiang_zhuanpan" />


            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/dp_93"
                android:layout_height="@dimen/dp_46"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_38"
                android:layout_marginRight="@dimen/dp_38"
                android:layout_marginBottom="@dimen/dp_24"
                android:background="@mipmap/ic_choujiang_button_1" />

            <ImageView
                android:layout_width="@dimen/dp_93"
                android:layout_height="@dimen/dp_46"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_38"
                android:layout_marginRight="@dimen/dp_38"
                android:layout_marginBottom="@dimen/dp_24"
                android:background="@mipmap/ic_choujiang_button_1" />

            <ImageView
                android:id="@+id/closeView"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_25"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/ic_close_b"
                app:tint="@color/white" />

        </RelativeLayout>

    </RelativeLayout>
</layout>