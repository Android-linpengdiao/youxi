<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mate_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include layout="@layout/status_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backView"
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_34"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_3"
                android:onClick="onClickBack"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/ic_arrow_left" />

            <TextView
                android:id="@+id/titleView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_18" />

        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_78"
            android:layout_marginTop="@dimen/dp_30"
            android:onClick="onClickBack"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/ic_renwujieshao" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_220"
            android:layout_marginTop="@dimen/dp_50"
            app:cardBackgroundColor="#28125A"
            app:cardCornerRadius="@dimen/dp_110"
            app:cardElevation="@dimen/dp_0">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dp_98"
                    android:layout_height="@dimen/dp_98"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="#41336E"
                    app:cardCornerRadius="@dimen/dp_50"
                    app:cardElevation="@dimen/dp_0">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_8"
                        android:background="@drawable/circle"
                        android:onClick="onClickBack"
                        android:padding="@dimen/dp_3"
                        android:src="@drawable/ic_test_user_icon" />

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预计等待时间: "
                    android:textColor="#B3FFFFFF"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:24"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/dp_176"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_35"
                android:background="@drawable/button_mate"
                android:gravity="center"
                android:onClick="onClickMate"
                android:text="开始匹配"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_15" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:text="允许反串"
                android:buttonTint="#53C6FD"
                android:checked="true"
                android:button="@null"
                android:drawableLeft="@drawable/check"
                android:textColor="@drawable/text_color"
                android:textSize="@dimen/sp_14" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:buttonTint="#53C6FD"
                android:checked="false"
                android:text="允许二刷"
                android:button="@null"
                android:drawableLeft="@drawable/check"
                android:textColor="@drawable/text_color"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </LinearLayout>
</layout>