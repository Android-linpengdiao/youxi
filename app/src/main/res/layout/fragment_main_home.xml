<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#181526"
        android:overScrollMode="never">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_home_bg" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/status_bar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/userIconView"
                        android:layout_width="@dimen/dp_52"
                        android:layout_height="@dimen/dp_52"
                        android:layout_marginRight="@dimen/dp_6"
                        android:background="@drawable/circle_gray"
                        android:padding="@dimen/dp_1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="与世无争"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/sp_16" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/swGoldView"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_18"
                                android:layout_marginRight="@dimen/dp_5"
                                android:background="@drawable/button_white_18_t45"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/dp_18"
                                    android:layout_height="@dimen/dp_18"
                                    android:layout_marginRight="@dimen/dp_4"
                                    android:background="@mipmap/ic_home_jinbi_t" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_8"
                                    android:text="1.6k"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/sp_12" />

                                <ImageView
                                    android:layout_width="@dimen/dp_14"
                                    android:layout_height="@dimen/dp_14"
                                    android:layout_marginRight="@dimen/dp_2"
                                    android:background="@drawable/circle_gray" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_18"
                                android:background="@drawable/button_white_18_t45"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/dp_18"
                                    android:layout_height="@dimen/dp_18"
                                    android:layout_marginRight="@dimen/dp_4"
                                    android:background="@mipmap/ic_home_zuanshi_t" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_8"
                                    android:text="0.2k"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/sp_12" />

                                <ImageView
                                    android:layout_width="@dimen/dp_14"
                                    android:layout_height="@dimen/dp_14"
                                    android:layout_marginRight="@dimen/dp_2"
                                    android:background="@drawable/circle_gray" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_98"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/image"
                    app:indicator_drawable_selected="@drawable/indicator_selected"
                    app:indicator_drawable_unselected="@drawable/indicator_unselected"
                    app:indicator_height="@dimen/dp_6"
                    app:indicator_selected_height="@dimen/dp_6"
                    app:indicator_selected_width="@dimen/dp_6"
                    app:indicator_width="@dimen/dp_6"
                    app:title_background="#FAFAFB"
                    app:title_textcolor="#393942"
                    app:title_textsize="@dimen/sp_16"
                    tools:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_16"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="184">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0"
                            app:cardCornerRadius="@dimen/dp_5"
                            app:cardElevation="@dimen/dp_0"
                            app:layout_constraintDimensionRatio="184:203"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F838A9"
                                android:text="剧本大厅"
                                android:textColor="#ffffff"/>
                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="150"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="64"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/mateView"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:cardCornerRadius="@dimen/dp_5"
                                app:cardElevation="@dimen/dp_0">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#DE609D"
                                    android:text="快速开始"
                                    android:textColor="#ffffff"/>
                            </androidx.cardview.widget.CardView>

                            <View
                                android:layout_width="@dimen/dp_5"
                                android:layout_height="match_parent" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/bangView"
                                android:layout_width="@dimen/dp_0"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:cardCornerRadius="@dimen/dp_5"
                                app:cardElevation="@dimen/dp_0">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#4C82E7"
                                    android:text="排行榜"
                                    android:textColor="#ffffff"/>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_5" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/anJianView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="134"
                            app:cardCornerRadius="@dimen/dp_5"
                            app:cardElevation="@dimen/dp_0"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#EE7868"
                                android:text="案件室"
                                android:textColor="#ffffff"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/ic_home_xinanjian" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/horizontalRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_11"
                            android:layout_marginRight="@dimen/dp_16" />
                    </RelativeLayout>

                </HorizontalScrollView>

                <ImageView
                    android:layout_width="@dimen/dp_73"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/ic_home_remenanjian" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:descendantFocusability="blocksDescendants">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/verticalRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

</layout>