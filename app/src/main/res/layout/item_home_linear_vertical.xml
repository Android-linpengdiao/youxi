<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_bg"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_12">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_4"
            app:cardElevation="@dimen/dp_0">

            <ImageView
                android:id="@+id/coverView"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_98"
                android:background="@drawable/image" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:minHeight="@dimen/dp_98"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_24"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titleView"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="男孩的精分日记"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/sp_16" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:background="@drawable/button_buy"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_40"
                        android:paddingLeft="@dimen/dp_4"
                        android:paddingRight="@dimen/dp_4">

                        <ImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_2"
                            android:background="@mipmap/ic_home_yigou" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已购"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/sp_10" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tagRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4" />

                <TextView
                    android:id="@+id/audioSetView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_14"
                    android:text="2026，能帮助警方侦破命案的逆天仪器“神侦探”问世只要对死或凶器进行次赛地地道道的滴滴滴打底..."
                    android:textColor="#A3FFFFFF"
                    android:textSize="@dimen/sp_10" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_weight="1"
                        android:text="5男2女 | 3小时"
                        android:textColor="#D1FFFFFF"
                        android:textSize="@dimen/sp_12" />

                    <com.yuoxi.android.app.view.RatingBar
                        android:id="@+id/ratingBarView"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_6"
                        app:ratingDefault="@drawable/svg_star_g"
                        app:ratingDefaultSelectNum="3.5"
                        app:ratingDistance="@dimen/dp_4"
                        app:ratingHeight="@dimen/dp_12"
                        app:ratingIsFull="true"
                        app:ratingSelect="@drawable/svg_star_y"
                        app:ratingSelectable="false"
                        app:ratingTotalNum="5"
                        app:ratingWidth="@dimen/dp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9.5分"
                        android:textColor="#D1FFFFFF"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</layout>