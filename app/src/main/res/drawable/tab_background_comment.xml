<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:left="@dimen/dp_5" android:right="@dimen/dp_5">
                <shape>
                    <corners android:radius="@dimen/dp_20" />
                    <gradient android:startColor="#D548F6"
                        android:endColor="#44D7FF"
                        android:angle="0"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item android:left="@dimen/dp_5" android:right="@dimen/dp_5">
                <shape>
                    <corners android:radius="@dimen/dp_20" />
                    <solid android:color="#3B425A"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>