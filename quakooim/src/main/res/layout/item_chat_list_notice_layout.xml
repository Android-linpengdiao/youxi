<?xml version="1.0" encoding="utf-8"?><!--用于显示通知消息-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/button_radius_theme"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_3"
            tools:text="2018-01-01 01:22"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/body_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_button_white"
            android:paddingLeft="@dimen/dp_10">
            <!--图片-->
            <ImageView
                android:id="@+id/notice_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/notice_hongbao"
                android:visibility="gone" />
            <!--主体-->
            <TextView
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_3"
                android:text=""
                android:textColor="@color/color_2E2E2E"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是可以点击的部分"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>
</layout>