<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:id="@+id/plugins_container"
        android:layout_width="@dimen/dp_266"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nickname"
        android:background="@drawable/bg_my_collection_find"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/pluginsIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pluginsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="bottom|left"
            android:lineSpacingExtra="5dp"
            android:maxLines="2"
            android:text="房间极限差3! 可反串，速来速开了！"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pluginsImage"
                android:layout_width="@dimen/dp_86"
                android:layout_height="@dimen/dp_120"
                android:src="@drawable/image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:minHeight="@dimen/dp_120"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/pluginsImage"
                    android:ellipsize="end"
                    android:lineSpacingExtra="5dp"
                    android:maxLines="2"
                    android:text="欲海沉沦 "
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/sp_14" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tagRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_4"/>

                <TextView
                    android:id="@+id/pluginsInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:maxLines="3"
                    android:text="在很久很久以前，流浪者张三在一个荒芜人烟的平原上躺着自己的马。穿越了人迹罕见的草丛里"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="#c55cf7"
                        android:textSize="@dimen/sp_15" />

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_6"
                        android:src="@mipmap/ic_jinbi_wan" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_24"
                        android:layout_weight="1"
                        android:background="@drawable/button_mg"
                        android:gravity="center"
                        android:text="立即加入"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/gameIcon"
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/gameName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:singleLine="true"
                android:text="小程序"
                android:textColor="@color/title_color_normal"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
</layout>